{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OMG Social Posts Payload",
  "type": "object",
  "required": ["posts"],
  "properties": {
    "posts": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["caption", "hashtags", "design_prompt"],
        "properties": {
          "caption": { "type": "string" },
          "hashtags": { "type": "string" },
          "design_prompt": { "type": "string" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
